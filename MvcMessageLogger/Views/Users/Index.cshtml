@model IEnumerable<MvcMessageLogger.Models.User>

<h1>Users</h1>

@if (Model.Any() != false)
{
    @foreach (var user in Model)
    {
        <ul>
            <li><p>UserName: @user.Username, Name: @user.Name</p></li>
            <a href="Users/@user.Id"><button>Log-In</button></a>
        </ul>
    }
}
else
{
    <p>No data available.</p>
}

<a href="/users/stats"><button>View All User Stats</button></a>
<a href="../"><button>Back</button></a>

