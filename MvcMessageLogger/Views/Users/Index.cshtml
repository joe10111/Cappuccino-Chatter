@model IEnumerable<MvcMessageLogger.Models.User>

<h1>Users</h1>

@if (Model.Any() != false)
{
    @foreach (var user in Model)
    {
        <ul class="scrollable-list list-group">
            <li><p>UserName: @user.Username, Name: @user.Name</p></li>
            <a href="Users/LogIn?username=@user.Username"><button class="btn btn-light">Log-In</button></a>
        </ul>
    }
}
else
{
    <p>No data available.</p>
}

<a href="../"><button class="btn btn-secondary custom-spacing-for-button">Back</button></a>
<a href="/users/stats"><button class="btn btn-light custom-spacing-for-button">View All User Stats</button></a>


